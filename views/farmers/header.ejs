<script>
function searchFunction() {
  let list = ['Rice', 'Wheat', 'Corn', 'Barley', 'Oats', 'Rye', 'Sorghum', 'Millet', 'Quinoa', 'Buckwheat','Wheat', 'Rice', 'Corn (Maize)', 'Soybeans', 'Cotton', 'Sugarcane', 'Coffee', 'Tea', 'Cocoa', 'Rubber',
  'Lentils', 'Chickpeas (Garbanzo Beans)', 'Black-eyed Peas', 'Kidney Beans', 'Black Beans', 'Pinto Beans', 'Split Peas (Green and Yellow)', 'Mung Beans', 'Adzuki Beans', 'Fava Beans (Broad Beans)',
  'Sorghum', 'Pearl Millet', 'Finger Millet (Ragi)', 'Foxtail Millet', 'Proso Millet', 'Barnyard Millet', 'Little Millet', 'Kodo Millet', 'Brown Top Millet', 'Teff',
  'Carrot', 'Spinach', 'Broccoli', 'Cauliflower', 'Bell Pepper', 'Potato', 'Tomato', 'Cucumber', 'Zucchini', 'Eggplant',
  'Apple', 'Banana', 'Orange', 'Mango', 'Pineapple', 'Strawberry', 'Grape', 'Watermelon', 'Kiwi', 'Peach'];

  let input = document.getElementById('search');
  let filter = input.value.toUpperCase();
  let resultsDiv = document.getElementById('results');

  // Clear previous results
  resultsDiv.innerHTML = '';

  if (filter.trim() === '') {
    // If the search input is empty, clear the results and return
    return;
  }

  let counter = 0;
  for (let i = 0; i < list.length; i++) {
    let txtValue = list[i].toUpperCase();
    if (txtValue.indexOf(filter) > -1) {
      // Create a new div for each matching item and append it to the results div
      let resultDiv = document.createElement('div');
      resultDiv.textContent = list[i];
      resultDiv.className = 'result'; 
      resultsDiv.appendChild(resultDiv);

      counter++;
      if (counter >= 5) {
        break;
      }
    }
  }
}
</script>